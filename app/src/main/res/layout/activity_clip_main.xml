<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/clip_children_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:onClick="onClipChildrenTest"
        android:text="Go To Test ClipChildren"/>

    <Button
        android:id="@+id/clip_padding_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:onClick="onClipToPaddingTest"
        android:text="Go To Test ClipToPadding"/>
</LinearLayout>